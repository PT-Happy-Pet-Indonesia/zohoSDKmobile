<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="@dimen/padding_margin_1dp"
    android:background="#00375D">

    <LinearLayout
        android:id="@+id/shuttle_layout"
        android:layout_width="142dp"
        android:layout_height="159dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corner_card_selectable"
        android:gravity="center"
        android:longClickable="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/suplay_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:srcCompat="@drawable/shuttle_large_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="#00F3EFEF"
            android:gravity="center_horizontal|center_vertical"
            android:text="Task"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_layout"
        android:layout_width="142dp"
        android:layout_height="159dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/rounded_corner_card_selectable"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toEndOf="@id/shuttle_layout"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:srcCompat="@drawable/supplies_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="clip_horizontal|center_horizontal|center_vertical"
            android:text="Order"
            android:textAllCaps="false"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stock_layout"
        android:layout_width="142dp"
        android:layout_height="159dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_card_selectable"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shuttle_layout">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/nameboard_selected" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Stock"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="62dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="#61423F3F"
            app:srcCompat="@drawable/back_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="142dp"
        android:layout_height="159dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_card_selectable"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stock_layout">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_star_big_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Account"
            android:textColor="#020202"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_layout"
        android:layout_width="142dp"
        android:layout_height="159dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/rounded_corner_card_selectable"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/stock_layout"
        app:layout_constraintTop_toBottomOf="@id/order_layout">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/placechange_selected" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contact"
            android:textColor="#020202"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>